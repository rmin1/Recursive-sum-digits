#include <iostream>
#include <iomanip>

using namespace std;

int fact (int n);

int main()
{
    int n;

    cout << "Enter a number you want to find the factorial of:" << endl;
    cin >> n;

    cout << n << "! is: " << fact(n) << endl;

    return 0;

}

int fact (int n)
{
    int factorial = 1;

    for (int i = 1; i <= n; i++)
    {
        factorial *= i;
    }

    return factorial ;
}
