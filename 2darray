#include <iostream>
using namespace std;

void showMenu(int& a);
void numbers(int b[3][4], int row, int column);
void createArray(int b[3][4], int row, int column);
void findRow (int b[3][4], int row, int column);
void findCol (int b[3][4], int row, int column);
void findSum (int b[3][4], int row, int column);

int main()
{
    int userChoice;
    int row = 3;
    int column = 4;
    int b[3][4];

    srand(time(0));


    for (int r = 0; r < row; r++)
    {
        for (int c = 0; c < column; c++)
        {
            b[r][c] = rand() % 10 + 1;

        }
    }
        numbers(b, 3, 4);
    do
    {
        cout << endl;
        showMenu(userChoice);
        cin << userChoice;

    if (userChoice == 1)
    {
        createArray(b, 3, 4);
    }
    if (userChoice == 2)
    {
        findRow(b, 3, 4);
    }
    if (userChoice == 3)
    {
        findCol(b, 3, 4);
    }
    if (userChoice == 4)
    {
        findSum(b, 3, 4);
    }

    }while (userChoice != 5);

    if (userChoice == 5)
    {
        cout << "Exiting Program." << endl;
    }
    return 0;
}

void showMenu(int& a)
{
    cout << "1. Create 2d array" << endl;
    cout << "2. Find row sum" << endl;
    cout << "3. Find col sum" << endl;
    cout << "4. Find total sum" << endl;
    cout << "5. Quit" << endl;

    cin >> a;
}
void numbers(int b[3][4], int row, int column)
{
    for (int r = 0; r < row; r ++)
    {
        for(int c = 0; c < column; c ++)
        {
            cout << " " << b[r][c];
        }
        cout << endl;
    }
}
void createArray(int b[3][4], int row, int column)
{
    for (int r = 0; r < row; r ++)
    {
        for (int c = 0; c < column; c ++)
        {
            cout << "Enter a number for Row:" << r+1 << " Column:" << c+1 << endl;
            cin >> b[r][c];
        }
    }
    numbers(b, 3, 4);
}

void findRow(int b[3][4], int row, int column)
{
    int sum = 0;
    cout << "Enter row index?" << endl;
    cin >> row;
    row = row - 1;

    for (int c = 0; c < column; c ++)
    {
        sum += b[row][c];
    }
    cout << "The sum of all row " << row + 1 << " numbers is " << sum << endl;
}
void findCol(int b[3][4], int row, int column)
{
    int sum = 0;

    cout << "Enter column index?" << endl;
    cin >> column;
    column = column - 1;

    for (int r = 0; r < row; r ++)
    {
        sum += b[r][column];
    }
    cout << "The sum of all column " << column + 1 << " numbers is " << sum << endl;

}
void findSum (int b[3][4], int row, int column)
{
    int sum = 0;

    for (int r = 0; r < row; r ++)
    {
        for (int c = 0; c < column; c ++)
        {
           sum += b[r][c];
        }
    }
    cout << "The total sum is " << sum << "."<< endl;
}

